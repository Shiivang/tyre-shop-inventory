<%- include("./parcials/header") %>
<div class="w-[100vw] h-[100vh] bg-[#F3F7EC] relative flex md:justify-end items-end " >
    <%- include("./nav") %>

    <div id="hello" class=" relative md:w-[89vw] w-full h-[90vh] p-4 pt-16 bg-[#e8eddf] py-10 shadow-md rounded-xl overflow-scroll  ">
        <h1 class="text-3xl w-full rounded-lg md:w-[87vw] h-16 glass font-semibold text-center bg-[#e8eddf] top-[10%] fixed z-50 p-4 ">CUSTOMERS</h1>
        <div class="flex md:flex-wrap flex-col md:flex-row md:justify-start p-1 gap-4 ">
        <% customer.forEach((C)=>{%>

            
        <div class=" w-full md:w-[28vw] h-[30vh] rounded-[20px] shadow-md  bg-zinc-300 shrink-0	  ">
         <h2><%= C.firstName %> <%= C.lastName %></h2>
         <h3><%= C.phone %></h3>
         <h3><%= C.email %></h3>
         <p><%= C.street %>,<%= C.city %>,<%= C.state %>,<%= C.zip %></p>
         <% C.purchaseHistory.forEach((item) => { %>
            <p>Quantity: <%= item.quantity %></p>
            <p><%= item.purchaseDate %></p>
        <% }) %>               
                
                   <div>
                    <a href="/tyres/update-customer/<%= C._id %>"> update </a>
                   <a href="/tyres/delete-customer/<%= C._id %>"> delete </a>
                   </div>                  
        </div>
        <%})%>
        
    </div>
    </div>

</div>


<%- include("./parcials/footer") %>
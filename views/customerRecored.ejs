<%- include("./parcials/header") %>
<div class="w-[100vw] h-[100vh] bg-[#F3F7EC] relative flex md:justify-end items-end " >
    <%- include("./nav") %>

    <div id="hello" class=" relative md:w-[89vw] w-full h-[90vh] p-4 pt-16 bg-[#e8eddf] py-10 shadow-md rounded-xl overflow-scroll  ">
        <h1 class="text-3xl w-full rounded-lg md:w-[87vw] h-16 glass font-semibold text-center bg-[#e8eddf] top-[10%] fixed z-50 p-4 ">CUSTOMERS</h1>
        <div class="flex md:flex-wrap flex-col md:flex-row md:justify-start p-1 gap-4 ">
        <% customer.forEach((C)=>{%>

            
        <div class=" w-full md:w-[28vw] min-h-[30vh] rounded-[20px] shadow-md  bg-zinc-300 text-pretty shrink-0 py-2 px-3 pb-4">
         <h2 class="text-3xl font-medium tracking-tighter md:text-2xl mb-2 capitalize " >  <%= C.firstName %> <%= C.lastName %></h2>
         <h3 class="capitalize text-md text-gray-700 font-semibold"><span class="text-gray-500" >contect - </span><%= C.phone %> <br> <span class="text-gray-500 ">Email - </span><%= C.email %></h3>
         <p class="capitalize text-md text-gray-700 font-semibold"><span class="text-gray-500">address - </span><span><%= C.street %></span> , <span><%= C.city %></span> , <span><%= C.state %></span> , <span><%= C.zip %></span></p>
         
         <% C.purchaseHistory.forEach((item) => { %>
            <p class="capitalize text-md text-gray-700 mt-2 mb-2 font-semibold"> <span class="text-gray-500">model - </span> <%= C.tyermodel %>     &#160; &#160;<span class="text-gray-500">Quantity: </span><%= item.quantity %></p> 
            
            <p class="capitalize text-md text-gray-700 mt-2 mb-2 font-semibold"> <span class="text-gray-500">Date - </span><%= item.purchaseDate.toLocaleDateString() %></p>
        <% }) %>               
                
                   <div class=" flex justify-end  gap-3 px-3 mt-4 md:mt-0 " >
                    <a href="/tyres/update-customer/<%= C._id %>">
                    <button class="relative py-2 px-8 text-black text-base font-bold nded-full overflow-hidden bg-white rounded-full transition-all duration-400 ease-in-out shadow-md hover:scale-105 hover:text-white hover:shadow-lg active:scale-90 before:absolute before:top-0 before:-left-full before:w-full before:h-full before:bg-gradient-to-r before:from-blue-500 before:to-blue-300 before:transition-all before:duration-500 before:ease-in-out before:z-[-1] before:rounded-full hover:before:left-0"> Update </button></a>
                   <a href="/tyres/delete-customer/<%= C._id %>">
                    <button class="relative py-2 px-8 text-black text-base font-bold nded-full overflow-hidden bg-white rounded-full transition-all duration-400 ease-in-out shadow-md hover:scale-105 hover:text-white hover:shadow-lg active:scale-90 before:absolute before:top-0 before:-left-full before:w-full before:h-full before:bg-gradient-to-r before:from-red-500 before:to-red-300 before:transition-all before:duration-500 before:ease-in-out before:z-[-1] before:rounded-full hover:before:left-0"> Delete </button> </a>
                   </div>                  
        </div>
        <%})%>
        
    </div>
    </div>

</div>


<%- include("./parcials/footer") %>
<%- include("./parcials/header") %>

<div class=" relative w-full  h-[100vh] bg-[#F3F7EC]">
  <%- include("./nav") %>

<form 
class="px-7  h-screen grid justify-center items-center"
action="/tyres/owner-DetailsUpdate/<%= ownerS._id %>"
method="post"
>
    <div class="grid gap-6" >
        <h1 class="text-3xl ">Update Owner</h1>

      <div class="w-full flex gap-3">
        <input 
        class="capitalize shadow-2xl p-3  w-full outline-none focus:border-solid focus:border-[1px] border-[#035ec5] placeholder:text-black"
         type="text"
         placeholder="First Name" 
         name="firstName"
         value="<%= ownerS.firstName %>"
         >
        <input 
        class="p-3 capitalize shadow-2xl  glass w-full placeholder:text-black outline-none focus:border-solid focus:border-[1px] border-[#035ec5]" 
        type="text" 
        placeholder="Last Name" 
        name="lastName"
        value="<%= ownerS.lastName %>"
        >
      </div>
      <div class="grid gap-6 w-full">
        <input 
        class="p-3 shadow-2xl  glass w-full placeholder:text-black outline-none focus:border-solid border-[#035ec5] focus:border-[1px]" 
        type="text" 
        placeholder="Email" 
        name="email"
        value="<%= ownerS.email %>"
        >
        <input 
        class="p-3 shadow-2xl   glass w-full text-black placeholder:text-black outline-none focus:border-solid focus:border-[1px]border-[#035ec5]" 
        type="text" 
        name="username"
        placeholder="Username"
        value="<%= ownerS.username %>"
     >
    
      </div>
     
      <button 
      class="outline-none glass shadow-2xl  w-full p-3  bg-[#ffffff42] hover:border-[#035ec5] hover:border-solid hover:border-[1px]  hover:text-[#035ec5] font-bold" 
     >
      Update Owner
    </button>
    </div>
  </form>

</div>

<%- include("./parcials/footer") %>
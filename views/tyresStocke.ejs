<%- include("./parcials/header") %>
<div
  class="w-[100vw] h-[100vh] bg-[#F3F7EC] relative flex md:justify-end items-end"
>
  <%- include("./nav") %>

  <div
    id="hello"
    class="relative md:w-[89vw] w-full h-[90vh] p-4 pt-16 bg-[#e8eddf] py-10 shadow-md rounded-xl flex flex-col overflow-scroll items-center gap-3"
  >
    <h1
      class="text-3xl w-full rounded-lg md:w-[87vw] h-16 glass font-semibold text-center bg-[#e8eddf] top-[10%] fixed z-50 p-4"
    >
      INVENTORY
    </h1>
    <% tyres.forEach((T)=>{%>
    <div
      class="w-full  h-[25vh] md:h-[15vh] glass flex justify-between items-center p-4 bg-zinc-300 rounded-lg shrink-0"
    >
      <div class="flex flex-col md:flex-row md:gap-6 justify-start md:justify-center items-start md:items-center  ">
        <h1 class="capitalize text-2xl mb-8 md:mb-0 font-semibold"><%= T.brand %></h1>
        <div>
          <h1 class="capitalize text-md text-gray-500">
            Model -
            <span class="text-gray-700 font-semibold"><%= T.model %></span>
          </h1>
          <h1 class="capitalize text-md text-gray-500">
            Size -
            <span class="text-gray-700 font-semibold"><%= T.size %></span>
          </h1>
        </div>
        <div>
          <h1 class="capitalize text-md text-gray-500">
            Price -
            <span class="text-gray-700 font-semibold">â‚¹<%= T.price %></span>/-
          </h1>
          <h1 class="capitalize text-md text-gray-500">
            Available Stock -
            <span class="text-gray-700 font-semibold"><%= T.stock %></span>
          </h1>
        </div>
      </div>

      <div class="flex flex-col md:flex-row relative justify-center items-center gap-6 md:gap-2">
        <a
          class="group h-12 w-12 flex justify-center items-center cursor-pointer outline-none z-10 hover:rotate-90 duration-300"
          href="/tyres/update/<%= T._id %>"
        >
          <svg
            class="stroke-teal-500 fill-none group-hover:fill-teal-100 group-active:stroke-teal-200 z-20 group-active:fill-teal-600 group-active:duration-0 duration-300"
            viewBox="0 0 24 24"
            height="50px"
            width="50px"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-width="1.5"
              d="M12 22C17.5 22 22 17.5 22 12C22 6.5 17.5 2 12 2C6.5 2 2 6.5 2 12C2 17.5 6.5 22 12 22Z"
            ></path>
            <path stroke-width="1.5" d="M8 12H16"></path>
            <path stroke-width="1.5" d="M12 16V8"></path>
          </svg>
        </a>

        <a
          class="group h-12 w-12 flex justify-center items-center cursor-pointer outline-none z-10 -rotate-45 hover:rotate-45 duration-300"
          href="/tyres/delete/<%= T._id %>"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="50px"
            height="50px"
            viewBox="0 0 24 24"
            class="stroke-orange-400 fill-none group-hover:fill-orange-100 z-20 group-active:stroke-orange-200 group-active:fill-orange-600 group-active:duration-0 duration-300"
          >
            <path
              d="M12 22C17.5 22 22 17.5 22 12C22 6.5 17.5 2 12 2C6.5 2 2 6.5 2 12C2 17.5 6.5 22 12 22Z"
              stroke-width="1.5"
            ></path>
            <path d="M8 12H16" stroke-width="1.5"></path>
            <path d="M12 16V8" stroke-width="1.5"></path>
          </svg>
        </a>
      </div>
    </div>
    <%})%>
  </div>
</div>

<%- include("./parcials/footer") %>
